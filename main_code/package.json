{
    "name": "ai-studio-agent",
    "displayName": "AI Studio Agent",
    "description": "AI Agent with AI Studio Integration",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.90.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "ai-agent.initialize",
                "title": "AI Agent: Initialize AI Studio",
                "category": "AI"
            },
            {
                "command": "ai-agent.logout",
                "title": "AI Agent: Logout",
                "category": "AI"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "ai-agent-container",
                    "title": "AI Agent",
                    "icon": "$(robot)"
                }
            ]
        },
        "views": {
            "ai-agent-container": [
                {
                    "id": "ai-agent-chat",
                    "name": "Chat",
                    "type": "webview"
                },
                {
                    "id": "ai-agent-test-tool",
                    "name": "Test Tool",
                    "type": "webview"
                }
            ]
        },
        "configuration": {
            "title": "AI Agent",
            "properties": {
                "ai-agent.ptkMode": {
                    "type": "string",
                    "enum": [
                        "standard",
                        "optimized"
                    ],
                    "default": "optimized",
                    "description": "PTK execution mode"
                },
                "ai-agent.groqApiKey": {
                    "type": "string",
                    "default": "",
                    "description": "Groq API key (get from https://console.groq.com)"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "dependencies": {
        "chokidar": "^5.0.0",
        "dotenv": "^17.2.3",
        "ignore": "^7.0.5",
        "puppeteer": "^21.0.0",
        "ws": "^8.14.0"
    },
    "devDependencies": {
        "@types/chokidar": "^1.7.5",
        "@types/jest": "^30.0.0",
        "@types/node": "20.x",
        "@types/vscode": "^1.90.0",
        "@types/ws": "^8.5.0",
        "jest": "^30.2.0",
        "ts-jest": "^29.4.5",
        "typescript": "^5.4.5"
    }
}
